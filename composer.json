{
  "name": "plugins/sensei-course-progress",
  "description": "Sensei LMS Course Progress",
  "type": "wordpress-plugin",
  "require-dev": {
    "php": "^7",
    "dealerdirect/phpcodesniffer-composer-installer": "0.7.1",
    "phpcompatibility/phpcompatibility-wp": "2.1.2",
    "squizlabs/php_codesniffer": "3.6.1",
    "wp-coding-standards/wpcs": "2.3.0"
  },
  "archive": {
    "exclude": [
      "/*",
      "!/assets/dist",
      "/assets/dist/css/*.js",
      "!/includes",
      "!/languages",
      "!/changelog.txt",
      "!/LICENSE",
      "!/readme.txt",
      "!/sensei-course-progress.php",
      ".DS_Store",
      ".*",
      "*.test.js"
    ]
  },
  "scripts": {
	"deploy": "dep deploy -o application=$(composer config name) cxl.com",
	"rollback": "dep rollback -o application=$(composer config name) cxl.com"
  }
}
